    }

    .left-login {
        justify-content: space-between;
        align-items: center;
        border-left: 4px solid #D3CBCB;
    }

    .rememberAndPassword {
        display: flex;
    }

    .button-login {
        width: 256px;
        height: 56px;
    }

    #loginButton {
        height: 100%;
        width: 100%;
        border-radius: 20px;
        border: none;
        background: linear-gradient(130deg, #145CEC 27.16%, #093284 92.98%);
        color: #FFF;
        text-align: center;
        font-size: 14px;
        font-style: normal;
        font-weight: 700;
        line-height: normal;
        cursor: pointer;
    }

    .new-account-button {
        width: 256px;
        height: 56px;
    }

    #newAccountButton {
        background-color: transparent;
        height: 100%;
        width: 100%;
        border-radius: 20px;
        border-radius: 20px;
        border: 2px solid #145CEC;
        color: #1358E3;
        text-align: center;
        font-size: 14px;
        font-style: normal;
        font-weight: 700;
        line-height: normal;
        cursor: pointer;
        padding: 1rem;
    }

    .form-login {
        display: flex;
        flex-direction: column;
        justify-content: space-around;
        align-items: center;
        width: 100%;
        height: 100%;
        gap: 28px;
    }

    .email-login, .username-login {
        position: relative;
        display: flex;
        justify-content: start;
        align-self: center;
        height: 80px;
        width: 432px;
        border-radius: 20px;
        border: 2px solid #CEC1C1;
    }

    input#NameUser {
        position: relative;
        display: flex;
        justify-content: start;
        align-self: center;
        height: 80px;
        width: 432px;
        border-radius: 20px;
        border: 2px solid #CEC1C1;
    }

    #email {
        height: 100%;
        width: 100%;
        border-radius: 20px;
        border: none;
        padding-left: 20px;
        font-size: 20px;
        font-weight: 500;
        color: #000;
        border-left: 2px solid #000;
    }

        #email::placeholder {
            color: #B5ADAD;
        }

        #email::-ms-check {
            border-left: none;
        }

    .email-login-span {
        position: relative;
        width: 16%;
        left: 4%;
        top: 24%;
    }


    .password-login {
        position: relative;
        display: flex;
        justify-content: start;
        align-self: center;
        height: 80px;
        width: 432px;
        border-radius: 20px;
        border: 2px solid #CEC1C1;
    }

    #password {
        height: 100%;
        width: 100%;
        border-radius: 20px;
        border: none;
        padding-left: 20px;
        font-size: 20px;
        font-weight: 500;
        color: #000;
        border-left: 2px solid #000;
    }

        #password::placeholder {
            color: #B5ADAD;
        }

    .password-login-span {
        position: relative;
        width: 16%;
        left: 4%;
        top: 32%;
        border-left: 4px #4D4D4E;
    }

    .gap {
        gap: 20px;
    }

    .gap2 {
        gap: 32%;
    }

    #remeberCheckBox {
        cursor: pointer;
    }

    .rememberAndPassword {
        height: 100%;
        width: 100%;
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        align-items: center;
    }

    #forgotPass {
        align-items: end;
    }
</style>