@model webleitour.Container.Models.UserModel

@{
    Layout = null;
    ViewBag.Title = "Resposta da API";
}

<div class="main-section" id="main-section">
    <div class="container-login">
        <div class="login right-login gap2">
            <img src="~/Images/LogoLeitour.svg" alt="Logo">
            <form asp-controller="User" asp-action="NewAccount" method="get">
                @Html.ActionLink("Logar", "Index", "User", new { id = "newAccountButton" }, null)
            </form>
        </div>

        <div class="login left-login gap">
            <h1>Login</h1>
            <h3>Seja bem-vindo a Leitour</h3>
            @using (Html.BeginForm("Registrar", "User", FormMethod.Post))
            {
                <div class="form-login">
                    <div class="username-login">
                        @Html.EditorFor(model => model.NameUser, new { placeholder = "Username" })
                    </div>
                    <div class="email-login">
                        @Html.EditorFor(model => model.Email, new { placeholder = "Email" })
                    </div>
                    <div class="password-login">
                        @Html.PasswordFor(model => model.Password, new { placeholder = "Password" })
                    </div>
                    <div class="button-login">
                        <input type="submit" value="Registrar" id="loginButton">
                    </div>
                </div>
            }
        </div>
    </div>
</div>


<style>
    * {
        padding: 0;
        margin: 0;
        box-sizing: border-box;
        font-family: Arial;
    }

    a {
        color: #000;
        text-decoration: none;
        color: #4D4D4E;
        text-align: center;
        font-size: 14px;
        font-style: bold;
        font-weight: 700;
        line-height: normal;
    }

    label {
        color: #4D4D4E;
        text-align: center;
        font-size: 14px;
        font-style: normal;
        font-weight: 500;
        line-height: normal;
    }

    h1 {
        color: #1358E3;
        text-align: center;
        font-size: 35px;
        font-style: normal;
        font-weight: 700;
        line-height: normal;
        text-transform: uppercase;
    }

    h3 {
        color: #4D4D4E;
        text-align: center;
        font-size: 20px;
        font-style: normal;
        font-weight: 500;
        line-height: normal;
    }


    .main-section {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        width: 100%;
        min-height: 100vh;
        background: linear-gradient(159deg, #05F 14.03%, #003398 94.64%);
    }

    .container-login {
        display: flex;
        width: 1240px;
        height: 640px;
