@model webleitour.Container.Models.RegisterUserModel

@{
    Layout = null;
    ViewBag.Title = "Resposta da API";
}

<div class="main-section" id="main-section">
    <div class="container-register">
        <div class="register right-register gap2">
            <div class="register-img">
                <img src="~/Images/LogoLeitour.svg" alt="Logo">
            </div>
            <div class="already-have-an-account-button">
                <form asp-controller="User" asp-action="NewAccount" method="get">
                    @Html.ActionLink("Fazer Login", "Index", "User", new { id = "newAccountButton" }, null)
                </form>
            </div>
        </div>

        <div class="register left-register gap">
            <h1>Registro</h1>
            <h3>Nova Conta</h3>
            @using (Html.BeginForm("Register", "User", FormMethod.Post))
            {

                @Html.AntiForgeryToken()

                <div class="form-register">
                    <div class="nameuser-register">
                        <span class="email-register-span"><img src="~/Images/nameuser.svg" /></span>
                        @Html.TextBoxFor(model => model.NameUser, new { @class = "nameuser", required = "required" })
                        @Html.ValidationMessageFor(model => model.NameUser)
                    </div>

                    <div class="email-register">
                        <span class="email-register-span">@@</span>
                        @Html.TextBoxFor(model => model.Email, new { @class = "email", placeholder = "Enter your email", required = "required" })
                        @Html.ValidationMessageFor(model => model.Email)
                    </div>


                    <div class="password-register">
                        <span class="password-login-span"><img src="~/Images/key.svg"></span>
                        @Html.PasswordFor(model => model.Password, new { @class = "password", placeholder = "Enter your password", required = "required" })
                        @Html.ValidationMessageFor(model => model.Password)
                    </div>


                    <div class="confirm-password-register">
                        <span class="password-login-span"><img src="~/Images/key.svg"></span>
                        @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm your password" })
                        @Html.ValidationMessageFor(model => model.ConfirmPassword)
                    </div>

                    <div class="button-register">
                        <input type="submit" value="Enviar" id="loginButton">
                    </div>
                </div>
            }
        </div>
    </div>
</div>
