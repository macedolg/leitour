
@{
    Layout = null;
    ViewBag.Title = "Login";
}


<div class="main-section" id="main-section">
    <div class="container-login">
        <div class="login right-login gap2">
            <img src="Images/LogoLeitour.svg" alt="Logo">
            <form asp-controller="User" asp-action="NewAccount" method="get">
                <button type="submit" id="newAccountButton">Nova Conta</button>
            </form>
        </div>

        <div class="login left-login gap">
            <h1>Login</h1>
            <h3>Seja bem-vindo a Leitour</h3>
            <form asp-controller="User" asp-action="Login" method="post">
                <div class="form-login">
                    <div class="email-login">
                        <span class="email-login-span"><img src="Images/arroba.svg" ></span>
                        <input type="email" asp-for="Email" id="email" placeholder="leitour@gmail.com">
                    </div>
                    <div class="password-login">
                        <span class="password-login-span"><img src="Images/key.svg" alt="Password Icon"></span>
                        <input type="password" asp-for="Password" id="password" placeholder="Min 8 caracteres">
                    </div>

                    <div class="remeberAndPassword">
                        <input type="checkbox" asp-for="RememberMe" id="remeberCheckBox">
                        <label for="remeberMe">Lembrar-me</label>
                        <a href="#" id="fortPass">Esqueceu a Senha?</a>
                    </div>
                    <div class="button-login">
                        <button type="submit" id="loginButton">LOGIN</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>


